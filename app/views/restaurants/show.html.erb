<div class="container p-5">
  <h1> <%= "#{@restaurant.name}" %> </h1>
  <ul>
    <li> Kitchen: <%= @restaurant.category %> </li>
    <li> Phone number: <%= @restaurant.phone_number %> </li>
    <li> Street: <%= @restaurant.address %> </li>
  </ul>

<h2> Reviews </h2>
  <table>
    <tr>
      <th>Rating</th>
      <th>Content</th>
    </tr>
      <% @restaurant.reviews.each do |review| %>
      <tr>
        <td> <%= review.rating %> </td>
        <td> <%= review.content %> </td>
      </tr>
      <%end%>
  </table>

  <%= link_to "return to list", restaurants_path %>
  <%= link_to "add a review", new_restaurant_review_path(@restaurant) %>
</div>
